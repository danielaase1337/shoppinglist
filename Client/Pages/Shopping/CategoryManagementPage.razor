        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .category-item {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 1rem;
        background: #fafafa;
        transition: all 0.3s ease;
    }

    .category-header {
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #e0e0e0;
    }

    .category-title {
        margin: 0;
        color: #333;
        cursor: pointer;
    }

    .category-title:hover {
        color: #0066cc;
    }

    .category-items {
        min-height: 80px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

