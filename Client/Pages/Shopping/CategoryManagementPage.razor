    }

    .items-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        min-height: 40px;
    }

    .item-chip {
        background: #007bff;
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 16px;
        font-size: 0.875rem;
        cursor: grab;
        user-select: none;
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        transition: all 0.2s ease;
        opacity: 1;
    }

    .item-chip:hover {
        background: #0056b3;
        transform: translateY(-1px);
        box-shadow: 0 2px 4px rgba(0,123,255,0.3);
    }

    .item-chip.dragging {
        opacity: 0.5;
