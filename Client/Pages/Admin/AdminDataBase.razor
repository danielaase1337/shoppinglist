@page "/admin"
@page "/admin/admindatabase"

<div class="container">
    <h2>Admin Database Management</h2>
    
    <div class="row">
        <div class="col">
            <h4>Test Data Operations</h4>
            <p>Denne siden kan brukes for administrasjon av database-data.</p>
            
            <div class="alert alert-info">
                <strong>Info:</strong> Admin-funksjonalitet er tilgjengelig for testing.
            </div>
            
            @* Midlertidig fjernet autentisering for testing
            <a href="/.auth/login/auth0" class="btn btn-primary">Login</a>
            *@
            
            <div class="mt-3">
                <button class="btn btn-secondary" @onclick="LoadTestData">Load Test Data</button>
                <button class="btn btn-warning" @onclick="ClearData">Clear Data</button>
            </div>
            
            @if (!string.IsNullOrEmpty(statusMessage))
            {
                <div class="alert alert-success mt-3">
                    @statusMessage
                </div>
            }
        </div>
    </div>
</div>

@code {
    private string statusMessage = "";
    
    private async Task LoadTestData()
    {
        statusMessage = "Test data loaded successfully.";
        await Task.Delay(100); // Simulate async operation
    }
    
    private async Task ClearData()
    {
        statusMessage = "Data cleared successfully.";
        await Task.Delay(100); // Simulate async operation
    }
}
